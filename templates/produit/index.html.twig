{% extends 'base.html.twig' %}

{% block title %}Hello ProduitController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">

  <h1>{{ 'produit.titre'|trans }}</h1>
  {% if produits is not empty %}
    <table class="table">
      <thead>
        <tr>
          <th>{{ 'Nom'|trans }}</th>
          <th>{{ 'Stock'|trans }}</th>
          <th>{{ 'Prix'|trans }}</th>
          <th>{{ 'produit.image'|trans }}</th>
        </tr>
      </thead>
      <tbody>
        {% for produit in produits %}
          <tr>
            <td class="align-middle"><a href="{{ path('produit', {'id':produit.id}) }}">{{ produit.name }}</a></td>
            
            <td class="align-middle">{{ produit.stock }}</td>
            <td class="align-middle">{{ produit.prix }}â‚¬</td>
            <td class="align-middle"><img src="{{asset('/uploads/'~ produit.photo)}}" class="img-thumbnail" style="height:120px"></td>
          </tr>
        {% endfor %}
      </tbody>
    </table>
  {% else %}
    <p>Il n'y a aucun produits.
  {% endif %}
  <hr>
  <h2>{{ 'produit.ajouter'|trans }}</h2>
  {{ form(form_ajout) }}

</div>
{% endblock %}
